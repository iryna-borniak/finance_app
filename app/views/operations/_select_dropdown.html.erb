<div class="row mb-3">
  <%= form_with(url: operations_path,
                method: :get, 
                class: "col-sm-12 col-md-4 col-lg-3",   
                data: { controller: "select", select_target: "form" }) do |form| %>                

    <%= form.select :category_id, 
                  options_from_collection_for_select(
                    Category.all, 
                    :id, 
                    :name, 
                    @category_id), 
                  { prompt: "<Фільтр по категоріям>" }, 
                    class: "form-select",
                    data: { action: "select#submit" } %>
  <% end %>
</div>
