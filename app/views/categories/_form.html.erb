<%= form_with(model: category, 
              class: "col col-md-12 col-lg-10") do |form| %>
  <div class="row mb-3">
    <div class="col col-md-8 col-lg-7 offset-md-3">
      <% if category.errors.any? %>
        <div style="color: red">
          <h4>
            <%= t('errors.save_category') %> <%= t('errors.prohibited') %>:
          </h4>          
        </div>
      <% end %>
    </div>
  </div>
  
  <div class="row mb-3">
    <%= form.label :name, 
                   "Назва категорії", 
                   class: "text-md-end 
                          col-md-3 
                          col-form-label" %>

    <div class="col 
                col-sm-6 
                col-md-4 
                col-lg-3">
      <%= form.text_field :name,
                          placeholder: "Введіть категорію", 
                          class: "form-control #{'is-invalid' if category.errors.key?(:name)}" %>

      <div class="invalid-feedback">
        <%= category.errors.full_messages_for(:name)&.first %>
      </div> 
    </div>
  </div>

  <div class="row mb-3">
    <%= form.label :description, 
                   "Короткий опис", 
                   class: "text-md-end 
                          col-md-3 
                          col-form-label" %>

    <div class="col-md-8 col-lg-7">
      <%= form.text_field :description,
                          placeholder: "Введіть опис категорії", 
                          class: "form-control #{'is-invalid' if category.errors.key?(:description)}" %>

      <div class="invalid-feedback">
        <%= category.errors.full_messages_for(:description)&.first %>
      </div> 
    </div>
  </div>

  <div class="row 
              justify-content-end 
              mb-4">
    <div class="col-md-9">
      <%= form.submit "Зберегти", 
                      class: "btn 
                              btn-primary 
                              shadow-sm 
                              border 
                              px-4" %>

      <%= link_to "Очистити",
                  category.persisted? ? edit_category_path : new_category_path,
                  class: "btn 
                          btn-primary 
                          shadow-sm 
                          border px-4" %>
    </div>
  </div>
<% end %>


  
